<UserControl x:Class="StageManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StageManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <!-- Style for Dashboard Tile Buttons -->
            <Style x:Key="TileButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Danger Card -->
        <Button Grid.Column="0" Command="{Binding FilterNeedsActionCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten die > 14 dagen geen contact hebben gehad">
            <Border Style="{StaticResource CardStyle}" Padding="10">
                <DockPanel>
                    <Rectangle Width="3" Fill="{DynamicResource DangerColor}" DockPanel.Dock="Left" Margin="-10,-10,8,-10"/>
                    <StackPanel>
                        <TextBlock Text="ACTIE VEREIST" Foreground="{DynamicResource Gray600}" FontSize="10" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding NeedsActionCount}" Foreground="{DynamicResource Gray800}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Warning Card -->
        <Button Grid.Column="1" Command="{Binding FilterInReviewCommand}" Style="{StaticResource TileButtonStyle}">
            <Border Style="{StaticResource CardStyle}" Padding="10">
                <DockPanel>
                    <Rectangle Width="3" Fill="{DynamicResource WarningColor}" DockPanel.Dock="Left" Margin="-10,-10,8,-10"/>
                    <StackPanel>
                        <TextBlock Text="IN REVIEW" Foreground="{DynamicResource Gray600}" FontSize="10" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding InReviewCount}" Foreground="{DynamicResource Gray800}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Info Card -->
        <Button Grid.Column="2" Command="{Binding FilterActiveCommand}" Style="{StaticResource TileButtonStyle}">
            <Border Style="{StaticResource CardStyle}" Padding="10">
                <DockPanel>
                    <Rectangle Width="3" Fill="{DynamicResource InfoColor}" DockPanel.Dock="Left" Margin="-10,-10,8,-10"/>
                    <StackPanel>
                        <TextBlock Text="ACTIEF" Foreground="{DynamicResource Gray600}" FontSize="10" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ActiveCount}" Foreground="{DynamicResource Gray800}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Success Card -->
        <Button Grid.Column="3" Command="{Binding FilterCompletedCommand}" Style="{StaticResource TileButtonStyle}">
            <Border Style="{StaticResource CardStyle}" Padding="10">
                <DockPanel>
                    <Rectangle Width="3" Fill="{DynamicResource SuccessColor}" DockPanel.Dock="Left" Margin="-10,-10,8,-10"/>
                    <StackPanel>
                        <TextBlock Text="AFGEROND" Foreground="{DynamicResource Gray600}" FontSize="10" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CompletedMonthCount}" Foreground="{DynamicResource Gray800}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Status Distribution Chart (Compact) -->
        <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="5,0,0,0" Padding="10">
            <StackPanel>
                <TextBlock Text="Statusverdeling" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource Gray800}" Margin="0,0,0,8"/>
                
                <ItemsControl ItemsSource="{Binding StatusDistribution}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Gray100}" CornerRadius="4" Margin="0,0,8,8" Padding="6,2" ToolTip="{Binding Value}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{DynamicResource PrimaryColor}" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding Label}" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource Gray700}"/>
                                    <TextBlock Text="{Binding Value, StringFormat=' ({0})'}" FontSize="10" Foreground="{DynamicResource Gray500}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
