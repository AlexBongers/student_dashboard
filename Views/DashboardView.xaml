<UserControl x:Class="StageManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StageManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <!-- Style for Dashboard Tile Buttons -->
            <Style x:Key="TileButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!-- Action Center / Alerts -->
        <Border Style="{StaticResource CardStyle}" Margin="0" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="18" Foreground="{DynamicResource PrimaryColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Actiecentrum" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Gray800}" VerticalAlignment="Center"/>
                    
                    <Border Background="{DynamicResource DangerColor}" CornerRadius="10" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center"
                            Visibility="{Binding Alerts.Count, Converter={StaticResource IntToVisibilityConverter}}">
                        <TextBlock Text="{Binding Alerts.Count}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Empty State -->
                <TextBlock Grid.Row="1" Text="Geen acties vereist op dit moment. Je bent helemaal bij!" 
                           Foreground="{DynamicResource Gray500}" FontStyle="Italic"
                           Visibility="{Binding Alerts.Count, Converter={StaticResource InverseIntToVisibilityConverter}}"/>

                <!-- Alerts List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Alerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.OpenStudentFromAlertCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource TileButtonStyle}">
                                    <Border Background="{DynamicResource Gray50}" BorderBrush="{DynamicResource Gray200}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Width="36" Height="36" CornerRadius="18" Background="{DynamicResource SurfaceBrush}" BorderThickness="1" Margin="0,0,15,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ColorResource}" Value="DangerColor">
                                                                <Setter Property="BorderBrush" Value="{DynamicResource DangerColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ColorResource}" Value="WarningColor">
                                                                <Setter Property="BorderBrush" Value="{DynamicResource WarningColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ColorResource}" Value="InfoColor">
                                                                <Setter Property="BorderBrush" Value="{DynamicResource InfoColor}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <TextBlock Text="{Binding Icon}" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ColorResource}" Value="DangerColor">
                                                                    <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ColorResource}" Value="WarningColor">
                                                                    <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ColorResource}" Value="InfoColor">
                                                                    <Setter Property="Foreground" Value="{DynamicResource InfoColor}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Message}" FontWeight="SemiBold" Foreground="{DynamicResource Gray800}" FontSize="14" Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding Description}" Foreground="{DynamicResource Gray600}" FontSize="12" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2" Text="&#xE76C;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource Gray400}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
