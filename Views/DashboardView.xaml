<UserControl x:Class="StageManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StageManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <!-- Style for Dashboard Tile Buttons -->
            <Style x:Key="TileButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Danger Card -->
            <Button Grid.Column="0" Command="{Binding FilterNeedsActionCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten die > 14 dagen geen contact hebben gehad">
                <Border Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <Rectangle Width="4" Fill="{DynamicResource DangerColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                        <StackPanel>
                            <TextBlock Text="ACTIE VEREIST" Foreground="{DynamicResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding NeedsActionCount}" Foreground="{DynamicResource Gray800}" FontSize="32" FontWeight="Bold"/>
                            <TextBlock Text="> 14 dagen geen contact" Foreground="{DynamicResource Gray600}" FontSize="12"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Button>

            <!-- Warning Card -->
            <Button Grid.Column="1" Command="{Binding FilterInReviewCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten met ingeleverde concepten">
                <Border Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <Rectangle Width="4" Fill="{DynamicResource WarningColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                        <StackPanel>
                            <TextBlock Text="WACHTEND OP REVIEW" Foreground="{DynamicResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding InReviewCount}" Foreground="{DynamicResource Gray800}" FontSize="32" FontWeight="Bold"/>
                            <TextBlock Text="Concepten ingeleverd" Foreground="{DynamicResource Gray600}" FontSize="12"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Button>

            <!-- Info Card -->
            <Button Grid.Column="2" Command="{Binding FilterActiveCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon alle actieve studenten">
                <Border Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <Rectangle Width="4" Fill="{DynamicResource InfoColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                        <StackPanel>
                            <TextBlock Text="IN UITVOERING" Foreground="{DynamicResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ActiveCount}" Foreground="{DynamicResource Gray800}" FontSize="32" FontWeight="Bold"/>
                            <TextBlock Text="Actieve trajecten" Foreground="{DynamicResource Gray600}" FontSize="12"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Button>

            <!-- Success Card -->
            <Button Grid.Column="3" Command="{Binding FilterCompletedCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten die deze maand zijn afgerond">
                <Border Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <Rectangle Width="4" Fill="{DynamicResource SuccessColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                        <StackPanel>
                            <TextBlock Text="AFGEROND" Foreground="{DynamicResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CompletedMonthCount}" Foreground="{DynamicResource Gray800}" FontSize="32" FontWeight="Bold"/>
                            <TextBlock Text="Deze maand" Foreground="{DynamicResource Gray600}" FontSize="12"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Button>
        </Grid>

        <!-- Status Distribution Chart -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="5,20,5,5" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Verdeling per Status" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Gray800}" Margin="0,0,0,20"/>
                
                <ItemsControl ItemsSource="{Binding StatusDistribution}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Label}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource Gray700}"/>
                                
                                <!-- Bar -->
                                <Border Grid.Column="1" Background="{DynamicResource Gray100}" Height="20" CornerRadius="4" Margin="10,0" ToolTip="{Binding Value}">
                                    <!-- Use a Grid layout trick to scale a Rectangle natively based on a percentage (0.0 to 1.0) -->
                                    <Grid>
                                        <!-- Column Width is bound to the percentage, while the star ensures it scales out of the total -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding Percentage, StringFormat='\{0}*'}"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Background bound to the DynamicResource color using standard Binding tricks (Requires a Converter or direct naming if simple - we'll just use a direct ColorResource binding with DynamicResource lookup trick if possible, or Fallback to PrimaryColor) -->
                                        <!-- For simplicity without writing a ColorConverter, we use inline styling to link to the Theme colors dynamically, but WPF has a limitation doing string-to-DynamicResource directly in DataTemplates. -->
                                        <!-- Alternatively, we provide a generic primary bar, or we write a tiny converter. For MVP dashboard, primary bar is fine, but we have ColorResource string, so let's stick to PrimaryColor for a clean look! -->
                                        <Border Grid.Column="0" Background="{DynamicResource PrimaryColor}" CornerRadius="4"/>
                                    </Grid>
                                </Border>
                                
                                <TextBlock Grid.Column="2" Text="{Binding Value, StringFormat='\{0} studenten'}" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource Gray500}" FontSize="11"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
