<UserControl x:Class="StageManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StageManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <!-- Style for Dashboard Tile Buttons -->
            <Style x:Key="TileButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Danger Card -->
        <Button Grid.Column="0" Command="{Binding FilterNeedsActionCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten die > 14 dagen geen contact hebben gehad">
            <Border Style="{StaticResource CardStyle}">
                <DockPanel>
                    <Rectangle Width="4" Fill="{StaticResource DangerColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                    <StackPanel>
                        <TextBlock Text="ACTIE VEREIST" Foreground="{StaticResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding NeedsActionCount}" Foreground="{StaticResource Gray800}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="> 14 dagen geen contact" Foreground="{StaticResource Gray600}" FontSize="12"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Warning Card -->
        <Button Grid.Column="1" Command="{Binding FilterInReviewCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten met ingeleverde concepten">
            <Border Style="{StaticResource CardStyle}">
                <DockPanel>
                    <Rectangle Width="4" Fill="{StaticResource WarningColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                    <StackPanel>
                        <TextBlock Text="WACHTEND OP REVIEW" Foreground="{StaticResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding InReviewCount}" Foreground="{StaticResource Gray800}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="Concepten ingeleverd" Foreground="{StaticResource Gray600}" FontSize="12"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Info Card -->
        <Button Grid.Column="2" Command="{Binding FilterActiveCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon alle actieve studenten">
            <Border Style="{StaticResource CardStyle}">
                <DockPanel>
                    <Rectangle Width="4" Fill="{StaticResource InfoColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                    <StackPanel>
                        <TextBlock Text="IN UITVOERING" Foreground="{StaticResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ActiveCount}" Foreground="{StaticResource Gray800}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="Actieve trajecten" Foreground="{StaticResource Gray600}" FontSize="12"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>

        <!-- Success Card -->
        <Button Grid.Column="3" Command="{Binding FilterCompletedCommand}" Style="{StaticResource TileButtonStyle}" ToolTip="Toon studenten die deze maand zijn afgerond">
            <Border Style="{StaticResource CardStyle}">
                <DockPanel>
                    <Rectangle Width="4" Fill="{StaticResource SuccessColor}" DockPanel.Dock="Left" Margin="-20,-20,10,-20"/>
                    <StackPanel>
                        <TextBlock Text="AFGEROND" Foreground="{StaticResource Gray600}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CompletedMonthCount}" Foreground="{StaticResource Gray800}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="Deze maand" Foreground="{StaticResource Gray600}" FontSize="12"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Button>
    </Grid>
</UserControl>
