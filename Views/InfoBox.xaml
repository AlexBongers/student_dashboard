<UserControl x:Class="StageManagementSystem.Views.InfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Margin="0,0,10,10">
    <Border Background="{DynamicResource Gray50}" BorderThickness="3,0,0,0" BorderBrush="{DynamicResource PrimaryColor}" CornerRadius="4" Padding="10">
        <StackPanel>
            <TextBlock x:Name="LabelText" FontSize="11" Foreground="{DynamicResource Gray600}" FontWeight="SemiBold"/>
            <TextBlock x:Name="ValueText" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource Gray800}" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
